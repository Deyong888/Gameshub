      weibo: "微博",
      qq: "QQ",
      douyin: "抖音",
      xiaohongshu: "小红书",
      twitter: "Twitter",
      facebook: "Facebook",
      whatsapp: "WhatsApp",
      instagram: "Instagram",
      mercadolibre: "Mercado Libre",
