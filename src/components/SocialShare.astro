const t = translations[locale] || translations.en;
const currentUrl = Astro.url.href;
const shareText = encodeURIComponent(t.shareText);
const shareUrl = encodeURIComponent(currentUrl);
---

<section class="social-share py-16 bg-gradient-to-b from-[#FF61D8] via-[#8B5CF6] to-[#6B48FF]">
  <div class="container mx-auto px-4">
    <div class="text-center mb-10">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
        {t.title}
      </h2>
      <p class="text-lg text-white/90">{t.description}</p>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 max-w-4xl mx-auto">
      <!-- 拉美地区社交平台 -->
      <a href={`https://api.whatsapp.com/send?text=${shareText}%20${shareUrl}`}
         target="_blank"
         rel="noopener noreferrer"
         class="share-btn group bg-gradient-to-r from-green-500 to-green-600">
        <span class="icon">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
        </span>
        <span class="text">{t.platforms.whatsapp}</span>
      </a>

      <!-- Mercado Libre (拉美最大电商平台) -->
      <a href={`https://www.mercadolibre.com/jms/[country-code]/ml.social.share?url=${shareUrl}`}
         target="_blank"
         rel="noopener noreferrer"
         class="share-btn group bg-gradient-to-r from-yellow-500 to-yellow-600">
        <span class="icon">ML</span>
        <span class="text">{t.platforms.mercadolibre}</span>
      </a>

      <!-- Taringa (阿根廷社交平台) -->
      <a href={`https://www.taringa.net/share?url=${shareUrl}&title=${shareText}`}
         target="_blank"
         rel="noopener noreferrer"
         class="share-btn group bg-gradient-to-r from-blue-500 to-blue-600">
        <span class="icon">T</span>
        <span class="text">{t.platforms.taringa}</span>
      </a>

      <!-- Kwai (快手国际版，在拉美流行) -->
      <a href={`https://www.kwai.com/share?url=${shareUrl}&title=${shareText}`}
         target="_blank"
         rel="noopener noreferrer"
         class="share-btn group bg-gradient-to-r from-red-500 to-red-600">
        <span class="icon">K</span>
        <span class="text">{t.platforms.kwai}</span>
      </a>

      <!-- 保留原有的主流社交平台 -->
      <a href={`https://twitter.com/intent/tweet?text=${shareText}&url=${shareUrl}`}
         target="_blank"
         rel="noopener noreferrer"
         class="share-btn group bg-gradient-to-r from-black to-gray-800">
        <span class="icon">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
          </svg>
        </span>
        <span class="text">{t.platforms.twitter}</span>
      </a>

      <!-- 其他社交平台按钮... -->
    </div>
  </div>
</section>

<style>
  .social-share {
    position: relative;
    overflow: hidden;
  }

  .social-share::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/path-to-music-pattern.png') repeat;
    opacity: 0.1;
    pointer-events: none;
  }

  .share-btn {
    @apply flex items-center justify-center gap-2 px-4 py-3 text-white rounded-xl transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg text-sm backdrop-blur-sm;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .share-btn .icon {
    @apply flex items-center justify-center transition-transform duration-300 w-6 h-6;
  }

  .share-btn:hover .icon {
    @apply scale-110;
  }

  .share-btn .text {
    @apply font-medium hidden sm:block;
  }

  /* 音乐主题动画 */
  @keyframes musicPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .share-btn:hover {
    animation: musicPulse 1s infinite;
  }

  /* 响应式优化 */
  @media (max-width: 640px) {
    .share-btn {
      @apply px-3 py-2;
    }
    
    .share-btn .icon {
      @apply w-5 h-5;
    }
  }
</style>

<script>
// 处理分享逻辑
document.addEventListener('DOMContentLoaded', () => {
  // 添加分享成功的音效
  const playShareSound = () => {
    const audio = new Audio('/path-to-share-sound.mp3');
    audio.play();
  };

  // 为所有分享按钮添加点击效果
  document.querySelectorAll('.share-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      playShareSound();
    });
  });
});
</script> 