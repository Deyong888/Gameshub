  en: {
    title: "About Sprunki",
    meta: {
      title: "About Sprunki - Innovative Music Game Studio",
      description: "Learn about Sprunki game studio's story, our mission and vision. Discover how we bring the joy of music creation to players worldwide."
    },
    hero: {
      title: "Defining the Future of Music Gaming",
      subtitle: "We're dedicated to making music creation simple and fun"
