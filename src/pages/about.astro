const t = translations[locale] || translations.en;
---

<Layout title={t.meta.title} description={t.meta.description}>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container mx-auto px-4">
      <h1 class="heading-gradient">{t.hero.title}</h1>
      <p class="hero-subtitle">{t.hero.subtitle}</p>
    </div>
  </section>

  <!-- Story Section -->
  <section class="story-section">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="story-content">
          <h2 class="section-title">{t.story.title}</h2>
          <p class="story-text">{t.story.content}</p>
        </div>
        <div class="story-image">
          <Image 
            src={studioImg} 
            alt="Sprunki Studio"
            class="rounded-2xl shadow-xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="mission-section">
    <div class="container mx-auto px-4">
      <h2 class="section-title text-center">{t.mission.title}</h2>
      <div class="grid md:grid-cols-3 gap-8">
        {t.mission.items.map(item => (
          <div class="mission-card">
            <h3>{item.title}</h3>
            <p>{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features-section">
    <div class="container mx-auto px-4">
      <h2 class="section-title text-center">{t.features.title}</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {t.features.items.map(item => (
          <div class="feature-card">
            <h3>{item.title}</h3>
            <p>{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Community Section -->
  <section class="community-section">
    <div class="container mx-auto px-4 text-center">
      <h2 class="section-title">{t.community.title}</h2>
      <p class="community-description">{t.community.description}</p>
      <a href="/community" class="join-button">
        {t.community.joinButton}
      </a>
    </div>
  </section>
</Layout>

<style>
  .hero-section {
    background: linear-gradient(135deg, rgba(255, 97, 216, 0.1), rgba(107, 72, 255, 0.1));
    padding: 6rem 0;
    text-align: center;
  }

  .heading-gradient {
    background: linear-gradient(to right, #FF61D8, #6B48FF);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 3.5rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
  }

  .hero-subtitle {
    color: #6B48FF;
    font-size: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .section-title {
    color: #FF61D8;
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 2rem;
  }

  .story-section,
  .mission-section,
  .features-section,
  .community-section {
    padding: 4rem 0;
  }

  .mission-card,
  .feature-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    padding: 2rem;
    border: 2px solid rgba(255, 97, 216, 0.1);
    transition: all 0.3s ease;
  }

  .mission-card:hover,
  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(107, 72, 255, 0.15);
  }

  .mission-card h3,
  .feature-card h3 {
    color: #FF61D8;
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .mission-card p,
  .feature-card p {
    color: #6B48FF;
    line-height: 1.6;
  }

  .community-section {
    background: linear-gradient(135deg, rgba(255, 97, 216, 0.1), rgba(107, 72, 255, 0.1));
    text-align: center;
  }

  .community-description {
    color: #6B48FF;
    max-width: 800px;
    margin: 0 auto 2rem;
    font-size: 1.2rem;
    line-height: 1.6;
  }

  .join-button {
    display: inline-block;
    background: linear-gradient(to right, #FF61D8, #6B48FF);
    color: white;
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .join-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(107, 72, 255, 0.2);
  }

  @media (max-width: 768px) {
    .heading-gradient {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.2rem;
    }

    .section-title {
      font-size: 2rem;
    }
  }
</style>
